<?xml version="1.0"?>
<?xml-stylesheet href="chrome://alpheios/skin/prefs/alpheios-prefs.css/" type="text/css"?>
<!DOCTYPE overlay [ 
  <!ENTITY % alpheiosDTD SYSTEM "chrome://alpheios/locale/alpheios-prefs.dtd">
  <!ENTITY % spanishDTD SYSTEM "chrome://alpheios-spanish/locale/alpheios-spanish-prefs.dtd">
  %alpheiosDTD;
  %spanishDTD;
]>
<overlay id="alpheios-spanish-prefs-overlay" 
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <!-- strings for the  main preferences window -->
    <stringbundleset id="alpheios-prefs-stringbundleset">
        <stringbundle 
            id="alpheios-prefs-strings-spanish" 
            src="chrome://alpheios-spanish/locale/alpheios-spanish.properties"/>
    </stringbundleset>

    <!-- popup trigger preference -->
    <prefpane id="alpheios-prefs-features">
        <preferences>
            <preference id="spanish-pref-trigger" 
                        name="extensions.alpheios.spanish.popuptrigger" 
                        type="string"/>
        </preferences>
    </prefpane>   
    
    <!-- popup trigger selection -->
    <groupbox id="alpheios-mouse-group">
        <radiogroup preference="spanish-pref-trigger">
            <caption label="&alpheios.spanish.prefs.label.trigger;"/>
            <radio label="&alpheios.prefs.popuptrigger.mousemove;" 
                   value="mousemove"/>    
             <radio label="&alpheios.prefs.popuptrigger.dblclick;" 
                    value="dblclick"/>
         </radiogroup>
    </groupbox>
    
    <!-- preferences for the service prefs dialog -->
    <prefpane id="alpheios-prefs-svc-advanced">
        <preferences>
                <preference id="pref-spanish-lexicon" 
                        name="extensions.alpheios.spanish.url.lexicon" 
                        type="string"/>
                <preference id="pref-spanish-lexicon-request" 
                        name="extensions.alpheios.spanish.url.lexicon.request"
                        type="string"/>
                <preference id="pref-spanish-lexicon-timeout" 
                        name="extensions.alpheios.spanish.url.lexicon.timeout" 
                        type="int"/>
            </preferences>
    </prefpane>
    
    <!-- tab for the service prefs dialog -->
    <tabbox id="alpheios-svc-tabs-advanced">
        <tabs id="alpheios-svc-prefs-tabs">
            <tab label="&alpheios.spanish.prefs.tablabel;"/>
        </tabs>
        <tabpanels id="alpheios-svc-prefs-details">
            <tabpanel id="alpheios-svc-prefs-spanish">
                <hbox flex="1" align="center">
                    <vbox flex="1">
                        <label value="&alpheios.prefs.url.morph;" 
                               control="spanish-lexicon"/>
                        <textbox id="spanish-lexicon" 
                                 preference="pref-spanish-lexicon"/>
                        <label value="&alpheios.prefs.url.morph.request;" 
                               control="url-spanish-lexicon-request"/>
                        <textbox id="url-spanish-lexicon-request" 
                                preference="pref-spanish-lexicon-request"/>
                        <label value="&alpheios.prefs.url.morph.timeout;" 
                               control="url-spanish-lexicon-timeout"/>
                        <textbox id="url-spanish-lexicon-timeout" 
                                preference="pref-spanish-lexicon-timeout"/>      
                </vbox>
                </hbox>
            </tabpanel>
        </tabpanels>
    </tabbox>

     <!-- add the spanish preference for overriding the panel defaults -->
    <prefpane id="alpheios-prefs-windows">
        <preferences>
            <preference id="pref-panel-override-spanish"
                        name="extensions.alpheios.spanish.panels.use.defaults"
                        type="bool"/>                
        </preferences>
    </prefpane>
    
    <!-- add the spanish tab to panel preferences tabpanel -->
    <tabbox id="alpheios-panel-prefs" >
        <tabs id="panel-prefs-tabs">
            <tab label="&alpheios.spanish.prefs.tablabel;"/>
        </tabs>
        <tabpanels id="panel-prefs-tabpanels">
            <tabpanel id="panel-prefs-tabpanel-spanish" align="vertical">
                <vbox>
                    <hbox align="center">
                        <checkbox id="panel-override-spanish" 
                                  preference="pref-panel-override-spanish"/>
                        <label control="panel-override-spanish" value="&alpheios.prefs.panels.use.defaults;"/>
                        <button oncommand="Alph.prefs.restore_panel_defaults(this);"
                                label="&alpheios.prefs.panels.restore.defaults;"/>
                    </hbox>
                    <groupbox id="panel-prefs-box-spanish"/>
                </vbox>
            </tabpanel>
        </tabpanels>
    </tabbox>
    
     <tabbox id="site-prefs">
        <tabs id="site-prefs-language-tabs">
            <tab id="site-prefs-language-tabs-spanish"
                 label="&alpheios.spanish.prefs.tablabel;"/>
        </tabs>
        <tabpanels id="site-prefs-language-details">
            <tabpanel>
                <vbox id="site-prefs-language-details-spanish"/> 
            </tabpanel>
        </tabpanels>
    </tabbox>
    
</overlay>
